# Staging Environment Variables for Render
# Copy to .env.staging and fill in your values

# Django Core Settings
DJANGO_SETTINGS_MODULE=Zela.settings.staging
SECRET_KEY=your-staging-secret-key-here
DEBUG=False

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Allowed Hosts and CSRF
ALLOWED_HOSTS=zela-staging.onrender.com,*.onrender.com
CSRF_TRUSTED_ORIGINS=https://zela-staging.onrender.com,https://*.onrender.com

# Email Configuration (Optional for staging)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=staging@zela.com

# Redis Cache (Optional)
# REDIS_URL=redis://red-xxx:6379

# Security Settings (Less strict for staging)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Logging
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG

# Optional: Cloud Storage for Media Files
USE_S3_MEDIA=False
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=zela-staging-media
# AWS_S3_REGION_NAME=us-east-1

# Optional: Additional Apps for Testing
# STAGING_APPS=debug_toolbar,django_extensions

# Build Configuration
RUN_TESTS_ON_BUILD=false
