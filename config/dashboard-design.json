  "card_templates": {
    "greeting_card": {
      "structure": "header_with_user_name + status_badge + rating_display",
      "styling": "bg-white + rounded-xl + shadow-sm + border"
    },
    "next_job_card": {
      "structure": "gradient_background + job_details + action_buttons",
      "styling": "bg-gradient-to-r + from-blue-50 + to-indigo-50 + border-blue-200"
    },
    "stat_card": {
      "structure": "value + label + change_indicator + icon",
      "styling": "bg-white + rounded-xl + shadow-sm + p-6"
    },
    "compliance_alert": {
      "structure": "warning_icon + message + action_button",
      "styling": "bg-yellow-50 + border-yellow-200 + rounded-xl"
    },
    "quick_actions": {
      "structure": "grid_layout + icon_button_pairs",
      "styling": "bg-gray-50 + hover:bg-gray-100 + rounded-lg"
    }
  },
  "state_management": {
    "alpine_js": {
      "current_tab": "string - tracks active tab",
