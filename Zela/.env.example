# Django Configuration
SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production
DEBUG=False
DJANGO_SETTINGS_MODULE=Zela.settings.production

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/zela_db

# For Azure PostgreSQL:
# DATABASE_URL=postgresql://username@servername:password@servername.postgres.database.azure.com:5432/dbname?sslmode=require

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,app-zela-prod.azurewebsites.net

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@zela.com

# Security Settings (Production Only)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Azure Specific Settings
USE_X_FORWARDED_HOST=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# CSRF Trusted Origins (comma-separated)
CSRF_TRUSTED_ORIGINS=https://app-zela-prod.azurewebsites.net,https://*.azurewebsites.net

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/home/site/wwwroot/staticfiles

# Media Files (if needed)
MEDIA_URL=/media/
MEDIA_ROOT=/home/site/wwwroot/media

# Application-specific settings
SITE_NAME=Zela
SITE_URL=https://app-zela-prod.azurewebsites.net

# Logging Level
LOG_LEVEL=INFO

# Optional: Sentry for error tracking
# SENTRY_DSN=your-sentry-dsn-here

# Optional: Redis for caching (if using Azure Cache for Redis)
# REDIS_URL=redis://your-redis-instance.redis.cache.windows.net:6380/0?password=your-password&ssl=True

# Optional: Azure Storage for media files
# AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
# AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
# AZURE_STORAGE_CONTAINER_NAME=media