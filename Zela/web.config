<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified"/>
    </handlers>
    <httpPlatform processPath="python" 
                  arguments="Zela/manage.py runserver %HTTP_PLATFORM_PORT%"
                  startupTimeLimit="220"
                  startupRetryCount="3"
                  stdoutLogEnabled="true">
      <environmentVariables>
        <environmentVariable name="DJANGO_SETTINGS_MODULE" value="Zela.settings.production" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>