# Production Environment Variables for Azure
# Copy to .env.production and fill in your values

# Django Core Settings
DJANGO_SETTINGS_MODULE=Zela.settings.production
SECRET_KEY=your-super-secure-production-secret-key
DEBUG=False

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Allowed Hosts and CSRF
ALLOWED_HOSTS=zela.com,www.zela.com
CSRF_TRUSTED_ORIGINS=https://zela.com,https://www.zela.com

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@zela.com

# Redis Cache
REDIS_URL=redis://your-azure-redis-hostname:6379

# Security Settings (Strict for production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Logging
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
APP_LOG_LEVEL=INFO

# Cloud Storage for Media Files
USE_S3_MEDIA=True
AWS_ACCESS_KEY_ID=your-azure-storage-access-key
AWS_SECRET_ACCESS_KEY=your-azure-storage-secret-key
AWS_STORAGE_BUCKET_NAME=zela-production-media
AWS_S3_REGION_NAME=eastus

# Azure-specific Settings
AZURE_WEBAPP_NAME=zela-production

# Optional: Application Insights
# APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Payment Processing (Production Keys)
# STRIPE_PUBLISHABLE_KEY=pk_live_...
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Third-party Services
# SENTRY_DSN=https://your-sentry-dsn
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
